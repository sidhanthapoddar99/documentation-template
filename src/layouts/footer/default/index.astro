---
/**
 * Footer Default - Multi-column footer with social links
 *
 * Features:
 * - Multiple link columns
 * - Social media links
 * - Copyright with dynamic year
 * - Responsive layout
 */

import { loadFooterConfig, processCopyright, resolvePageUrl } from '@loaders/config';
import type { FooterColumn, SocialLink } from '@loaders/config';

const footerConfig = loadFooterConfig();

const copyright = processCopyright(footerConfig.copyright);
const columns = footerConfig.columns || [];
const social = footerConfig.social || [];

// Social icons mapping
const socialIcons: Record<string, string> = {
  github: `<path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"/>`,
  twitter: `<path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/>`,
  linkedin: `<path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/>`,
  youtube: `<path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z"/><polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02"/>`,
  discord: `<path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"/>`,
};

function getIconPath(platform: string): string {
  return socialIcons[platform.toLowerCase()] || '';
}

function resolveLink(link: { href?: string; page?: string }): string {
  if (link.page) {
    return resolvePageUrl(link.page);
  }
  return link.href || '#';
}
---

<footer class="footer">
  <div class="footer__container">
    <!-- Link Columns -->
    {columns.length > 0 && (
      <div class="footer__columns">
        {columns.map((column: FooterColumn) => (
          <div class="footer__column">
            <h3 class="footer__column-title">{column.title}</h3>
            <ul class="footer__column-links">
              {column.links.map((link) => (
                <li>
                  <a href={resolveLink(link)} class="footer__link">
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    )}

    <!-- Bottom Section -->
    <div class="footer__bottom">
      <p class="footer__copyright">{copyright}</p>

      {social.length > 0 && (
        <div class="footer__social">
          {social.map((item: SocialLink) => (
            <a
              href={item.href}
              class="footer__social-link"
              target="_blank"
              rel="noopener noreferrer"
              aria-label={item.platform}
            >
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" set:html={getIconPath(item.platform)} />
            </a>
          ))}
        </div>
      )}
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-bg-secondary);
    border-top: 1px solid var(--color-border-default);
    padding: var(--spacing-2xl) 0;
  }

  .footer__container {
    max-width: var(--max-width-content);
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
  }

  .footer__columns {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    gap: var(--spacing-xl);
    margin-bottom: var(--spacing-2xl);
  }

  .footer__column-title {
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-md);
  }

  .footer__column-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .footer__link {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer__link:hover {
    color: var(--color-text-primary);
  }

  .footer__bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: var(--spacing-xl);
    border-top: 1px solid var(--color-border-default);
  }

  .footer__copyright {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }

  .footer__social {
    display: flex;
    gap: var(--spacing-md);
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    color: var(--color-text-muted);
    transition: color var(--transition-fast);
  }

  .footer__social-link:hover {
    color: var(--color-text-primary);
  }

  .footer__social-link svg {
    width: 1.25rem;
    height: 1.25rem;
  }

  @media (max-width: 640px) {
    .footer__bottom {
      flex-direction: column;
      gap: var(--spacing-md);
      text-align: center;
    }
  }
</style>
