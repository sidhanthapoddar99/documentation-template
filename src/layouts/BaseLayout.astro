---
/**
 * BaseLayout - Root layout for all pages
 *
 * Provides:
 * - HTML structure with head meta
 * - Theme CSS injection (supports @theme/default and custom themes)
 * - Dark mode script (prevents flash)
 * - Navbar and Footer slots
 *
 * Structure:
 * ┌─────────────────────────────────────┐
 * │           Top Navbar                │
 * ├─────────────────────────────────────┤
 * │           Main Body                 │
 * │         (slot content)              │
 * ├─────────────────────────────────────┤
 * │             Footer                  │
 * └─────────────────────────────────────┘
 */

import { loadSiteConfig, loadNavbarConfig, loadFooterConfig, getFavicon, getTheme } from '@loaders/config';
import { getThemeCSS } from '@loaders/theme';

// Note: We no longer import globals.css directly - theme CSS is injected dynamically
// import '@styles/globals.css';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  contentType?: 'docs' | 'blog' | 'custom';
  editorPath?: string;
}

// Load configurations
const siteConfig = loadSiteConfig();
const navbarConfig = loadNavbarConfig();
const footerConfig = loadFooterConfig();

// Get theme from config (default)
let themeRef = getTheme();
const isDev = import.meta.env.DEV;

// In dev mode, check for cookie-based theme override (set by dev toolbar)
// Cookies work because they're sent with every request, unlike localStorage
if (isDev) {
  const themeCookie = Astro.cookies.get('dev-color-theme');
  // If cookie exists and is not empty/__reset__, use it as theme override
  if (themeCookie && themeCookie.value && themeCookie.value !== '__reset__') {
    themeRef = `@theme/${themeCookie.value}`;
  }
}

// Load theme CSS
const themeCSS = getThemeCSS(themeRef);

const {
  title,
  description = siteConfig.site.description,
  ogImage,
  contentType,
  editorPath
} = Astro.props;

const siteName = siteConfig.site.name;
const fullTitle = title ? `${title} | ${siteName}` : siteConfig.site.title;
const faviconUrl = getFavicon();
---

<!doctype html>
<html lang="en" data-content-type={contentType} data-editor-path={isDev ? editorPath : undefined}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{fullTitle}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    {ogImage && <meta property="og:image" content={ogImage} />}

    <!-- Favicon -->
    <link rel="icon" href={faviconUrl} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />

    <!-- Theme CSS (dynamically injected based on site.yaml theme setting) -->
    <style id="theme-styles" set:html={themeCSS}></style>

    <!-- Dark Mode Script (prevents flash) -->
    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();

      if (theme === 'dark') {
        document.documentElement.setAttribute('data-theme', 'dark');
      }
    </script>

  </head>
  <body>
    <!-- Navbar Slot -->
    <slot name="navbar" />

    <!-- Main Content -->
    <main class="main-content">
      <slot />
    </main>

    <!-- Footer Slot -->
    <slot name="footer" />
  </body>
</html>

<style is:global>
  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .main-content {
    flex: 1;
  }
</style>
