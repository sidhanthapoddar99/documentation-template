---
/**
 * PostCard - Blog post preview card
 */

interface Props {
  title: string;
  description?: string;
  date?: string;
  author?: string;
  tags?: string[];
  href: string;
  image?: string;
}

const { title, description, date, author, tags = [], href, image } = Astro.props;

// Format date
function formatDate(dateStr?: string): string {
  if (!dateStr) return '';
  const d = new Date(dateStr);
  return d.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
}

const formattedDate = formatDate(date);
---

<article class="post-card">
  <a href={href} class="post-card__link">
    {image && (
      <div class="post-card__image-wrapper">
        <img src={image} alt={title} class="post-card__image" />
      </div>
    )}

    <div class="post-card__content">
      {tags.length > 0 && (
        <div class="post-card__tags">
          {tags.slice(0, 2).map((tag) => (
            <span class="post-card__tag">{tag}</span>
          ))}
        </div>
      )}

      <h2 class="post-card__title">{title}</h2>

      {description && (
        <p class="post-card__description">{description}</p>
      )}

      <div class="post-card__meta">
        {author && <span class="post-card__author">{author}</span>}
        {formattedDate && <time class="post-card__date">{formattedDate}</time>}
      </div>
    </div>
  </a>
</article>

<style>
  .post-card {
    background-color: var(--color-bg-primary);
    border: 1px solid var(--color-border-default);
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    transition: border-color var(--transition-fast), box-shadow var(--transition-fast);
  }

  .post-card:hover {
    border-color: var(--color-brand-primary);
    box-shadow: var(--shadow-md);
  }

  .post-card__link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .post-card__image-wrapper {
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background-color: var(--color-bg-secondary);
  }

  .post-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-normal);
  }

  .post-card:hover .post-card__image {
    transform: scale(1.05);
  }

  .post-card__content {
    padding: var(--spacing-lg);
  }

  .post-card__tags {
    display: flex;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-sm);
  }

  .post-card__tag {
    font-size: var(--font-size-xs);
    font-weight: 500;
    color: var(--color-brand-primary);
    background-color: var(--color-bg-secondary);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--border-radius-sm);
  }

  .post-card__title {
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-sm);
    line-height: 1.3;
  }

  .post-card__description {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: var(--spacing-md);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-card__meta {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }

  .post-card__author::after {
    content: 'Â·';
    margin-left: var(--spacing-md);
  }
</style>
