graph TB
    subgraph "Blockchain Layer"
        Registry[NeuralockRegistry.sol<br/>Server NFT Management]
        INeuralock[INeuralock Interface<br/>Access Control]
        AppContracts[Application Contracts<br/>Custom Logic]
        
        Registry -.->|verifies| INeuralock
        AppContracts -.->|implements| INeuralock
    end
    
    subgraph "Network Layer"
        subgraph "Server 1"
            API1[REST API]
            Crypto1[Crypto Engine]
            Storage1[(LevelDB)]
            Session1[(Redis)]
        end
        
        subgraph "Server 2"
            API2[REST API]
            Crypto2[Crypto Engine]
            Storage2[(LevelDB)]
            Session2[(Redis)]
        end
        
        subgraph "Server N"
            APIN[REST API]
            CryptoN[Crypto Engine]
            StorageN[(LevelDB)]
            SessionN[(Redis)]
        end
    end
    
    subgraph "Client Layer"
        subgraph "Frontend SDK"
            ReactHooks[React Hooks]
            WebCrypto[Web Crypto API]
            SessionMgmt[Session Manager]
        end
        
        subgraph "Backend SDK"
            PythonClient[Python Client]
            NodeClient[Node.js Client]
            CryptoLib[Native Crypto]
        end
    end
    
    subgraph "Application Layer"
        WebApp[Web Application]
        MobileApp[Mobile App]
        APIGateway[API Gateway]
        Services[Microservices]
    end
    
    subgraph "Management Layer"
        Portal[Admin Portal]
        Analytics[Analytics Dashboard]
        Monitoring[Monitoring System]
    end
    
    %% Application to Client connections
    WebApp --> ReactHooks
    MobileApp --> ReactHooks
    APIGateway --> NodeClient
    Services --> PythonClient
    
    %% Client to Network connections
    ReactHooks --> API1
    ReactHooks --> API2
    ReactHooks --> APIN
    WebCrypto --> Crypto1
    
    NodeClient --> API1
    NodeClient --> API2
    PythonClient --> APIN
    
    %% Network to Blockchain connections
    API1 --> Registry
    API2 --> AppContracts
    APIN --> INeuralock
    
    %% Management connections
    Portal --> Registry
    Analytics --> Monitoring
    Monitoring --> API1
    Monitoring --> API2
    Monitoring --> APIN
    
    %% Storage connections
    Crypto1 --> Storage1
    Crypto1 --> Session1
    Crypto2 --> Storage2
    Crypto2 --> Session2
    CryptoN --> StorageN
    CryptoN --> SessionN
    
