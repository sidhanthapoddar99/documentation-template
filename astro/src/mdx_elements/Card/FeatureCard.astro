---
/**
 * FeatureCard - Card with icon, title, and description
 *
 * Usage:
 * <FeatureCard
 *   icon="ðŸš€"
 *   title="Fast"
 *   description="Lightning fast builds"
 *   href="/docs/performance"
 * />
 */

export interface Props {
  icon?: string;
  title: string;
  description?: string;
  href?: string;
  class?: string;
}

const { icon, title, description, href, class: className = '' } = Astro.props;

const Tag = href ? 'a' : 'div';
---

<Tag
  class:list={['feature-card', { 'feature-card--clickable': href }, className]}
  href={href}
>
  {icon && <span class="feature-card__icon" aria-hidden="true">{icon}</span>}
  <h3 class="feature-card__title">{title}</h3>
  {description && <p class="feature-card__description">{description}</p>}
  <div class="feature-card__content">
    <slot />
  </div>
  {href && (
    <span class="feature-card__arrow" aria-hidden="true">â†’</span>
  )}
</Tag>

<style>
  .feature-card {
    position: relative;
    display: flex;
    flex-direction: column;
    padding: 1.25rem;
    background-color: var(--theme-card-bg);
    border: 1px solid var(--theme-card-border);
    border-radius: 0.5rem;
    transition: border-color 0.15s ease, box-shadow 0.15s ease;
    text-decoration: none;
    color: inherit;
  }

  .feature-card--clickable {
    cursor: pointer;
  }

  .feature-card--clickable:hover {
    border-color: var(--color-brand-primary);
    box-shadow: var(--theme-shadow-md);
  }

  .feature-card__icon {
    font-size: 2rem;
    margin-bottom: 0.75rem;
    line-height: 1;
  }

  .feature-card__title {
    margin: 0 0 0.5rem;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--theme-text-heading);
    line-height: 1.3;
  }

  .feature-card__description {
    margin: 0;
    font-size: 0.875rem;
    color: var(--theme-text-secondary);
    line-height: 1.5;
  }

  .feature-card__content {
    margin-top: 0.75rem;
    font-size: 0.875rem;
    color: var(--theme-text-secondary);
  }

  .feature-card__content:empty {
    display: none;
  }

  .feature-card__arrow {
    position: absolute;
    top: 1.25rem;
    right: 1.25rem;
    font-size: 1rem;
    color: var(--theme-text-muted);
    transition: transform 0.15s ease, color 0.15s ease;
  }

  .feature-card--clickable:hover .feature-card__arrow {
    transform: translateX(0.25rem);
    color: var(--color-brand-primary);
  }

  /* Hover effect for clickable cards */
  .feature-card--clickable:hover .feature-card__title {
    color: var(--color-brand-primary);
  }
</style>
